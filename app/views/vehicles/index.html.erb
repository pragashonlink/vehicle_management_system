<%= link_to "Import Vehicles", new_vehicle_import_path %>

<%= form_with(url: '/vehicles', method: 'get', local: true) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @vehicles.empty? %>
    <p>No Vehicles were found.</p>
<% else %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Region</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @vehicles.each do |vehicle| %>
            <tr>
                <td><%= vehicle.name %></td>
                <td><%= vehicle.model %></td>
                <td><%= vehicle.year %></td>
            </tr>
            <% end %>
        </tbody>
</table>
<% end %>
